<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain">
	<class name="SpecimenType" table="specimen_type" lazy="true"  polymorphism="explicit">
		<id name="id" column="id">
			<generator class="assigned" />

		</id>

		<property name="name" column="name" />
		
		<set name="periodShipment" inverse ="true" lazy="true">
			<key column="specimen_type_id" />
			<one-to-many class="NumberShipped" />
		</set>
		
		<set name="weHave" inverse="true" lazy="true">
			<key column="specimen_type_id"/>
			<one-to-many class="SpecimenInventory"/>
		</set>
	</class>
</hibernate-mapping>