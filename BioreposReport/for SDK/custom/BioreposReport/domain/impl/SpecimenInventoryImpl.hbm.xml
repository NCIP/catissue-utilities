<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="domain.impl">
	<class name="SpecimenInventoryImpl" table="specimen_inventory" lazy="true">

		<id name="id" column="id" >
			<generator class="assigned"/>
		</id>

		<property name="numberofspecimens" column="specimen_count"
			type="long" />

		<many-to-one name="numberOf" column="specimen_type_id"
			class="SpecimenTypeImpl" not-null="true"  lazy="proxy"/>

		<many-to-one name="collectedFor" column="collection_protocol_id"
			class="CollectionProtocolImpl" not-null="true"  lazy="proxy"/>

	</class>
</hibernate-mapping>